  <script>
      function showPassword() { 
          x= document.getElementById("password");
          y= document.getElementById("passwordConfirmation")
          if(x.type === "password"){
              x.type = "text";
              y.type ="text";
          }
          else{
              x.type ="password";
              y.type ="password";
          }
       }
  </script>
