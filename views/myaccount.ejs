<%# ADDING HEADER %>
<%- include("partials/header.ejs" , {pageTitle : "CollegeGeeks: :: My Account" , style: "css/style.css"}); -%>

<%# ADDING NAVBAR %>
<section class="title_myaccount">
    <%- include("partials/LoggedNavbar.ejs");  -%>
    <!-- <p>answers ::: <%=profile.answers%></p>
    <p>likedAnswers ::: <%=profile.likedAnswers%></p> -->
</section>

<section class="my_acc">
    <div class="container">
        <div class="row">
            <div class = "my_background rounded">
               <a href="/Editprofile" ><button class="edit_profile btn btn-sm btn-secondary" type="button">Edit Profile</button></a>
            </div>
            <div class="user_profile">
                <%=profile.dp%>
            <div class=" upload">
                <input type="file" id="actual-btn" hidden>
                <label for="actual-btn" style="cursor: pointer; color: black;"><i class="fas fa-camera fa-2x"></i></label>
            </div>
            </div>
            <div class="usename">
                    <span class="display-6"><%=profile.name%></span>
                    <p><%=profile.intro%></p>
            </div>
        </div>
    </div>  
</section>

<section class="my_acc_body">
    <div class="container">
        <div class="row">
            <div class="mdl-card">
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <h4>UserName Stats</h4>
                                </thead>
                                <hr>
                                  <tbody>
                                    <tr>
                                      <td><b>Followers</b></td>
                                      <td><b>Answered</b></td>
                                      <td><b>Asked</b></td>
                                    </tr>
                                    <tr>
                                      <td><%=profile.followings%></td>
                                      <td><%=profile.answeredQuestions%></td>
                                      <td><%=profile.questions%></td>
                                    </tr>
                                  </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</section>


<section class="my_acc_body">
    <div class="container">
        <div class="row">
            <div class="mdl-card">
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <h4>About</h4>
                                </thead>
                                <hr>
                                  <tbody>
                                    <tr>
                                      <td><b>Name</b></td>
                                      <td><b><%=profile.name%></b></td>
                                    </tr>
                                    <tr>
                                    <td><b>Stream</b></td>
                                    <td><b><%=profile.branch%></b></td>
                                    </tr>
                                    <tr>
                                        <td><b>Email</b></td>
                                        <td><b><%=profile.email%></b></td>
                                    </tr>
                                  </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</section>





















































