<%# ADDING HEADER %>
<%- include("partials/header.ejs" , {pageTitle : "CollegeGeeks: :: Questions" , style: "css/style.css"}); -%>


<% if(isLoggedIn === true){%>
    <section class="title_home">
        <%- include("partials/LoggedNavbar.ejs"); -%>
    </section>
<%} else {%>
    <section class="title_home">
        <%- include("partials/navbar.ejs"); -%>
    </section>
<%}%>

<body class="body">
<section class="container">
    <div class="container">
        <div class="row">
            <% if(error.length > 0) { %>
                <%= error %>
            <% } else { %>
                <%questions.forEach(element => {%>
                    <div class="card mb-1">
                        <div class="card-body">
                          <div class="author_name"><%=element.authorName%></div>  
                          <div class="card-title"><h5><%= element.statement%> </h5> </div><hr>
                          <button type="button" class="openanswer btn btn-sm btn-light rounded-pill m-1"><a href="/questionPage">Read more</a></button>
                        </div>
                    </div>
                <%});%>
            <% } %> 
        </div>
    </div>
</section>















